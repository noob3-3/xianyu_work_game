<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/id_context"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "92%"
        app:layout_widthPercent = "100%"
        />

    <LinearLayout
        android:background="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_context"
        android:id="@+id/bootom_navigation"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent = "8%"
        app:layout_widthPercent = "100%"
        android:orientation="horizontal"
        >

        <!--  游戏  -->
        <RelativeLayout
            android:id="@+id/game_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/game_img"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>


        <!--  排行榜  -->
        <RelativeLayout
            android:id="@+id/ranking_list_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/ranking_list_img"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>


        <!--  我的  -->
        <RelativeLayout
            android:id="@+id/user_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/user_img"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>

    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>